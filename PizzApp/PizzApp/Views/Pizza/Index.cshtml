@using PizzApp.Database
@using PizzApp.Models.Entities
@{
    ViewData["Title"] = "Pizzas";
}

@model List<PizzaViewModel>

@foreach(PizzaViewModel pizza in @Model) {
    <div>
        <h3>
            <a asp-controller="Pizza" asp-action="Details" asp-route-id="@pizza.Id">@pizza.Name</a> - @pizza.Price
        </h3>
    </div>
}